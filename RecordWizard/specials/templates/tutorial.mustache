<div class="mwe-rw-content-title">
	<h3>{{_ "mwe-recwiz-tutorial-title"}}</h3>
</div>
<div class="mwe-rw-section-group" v-show="!state.isBrowserReady">
	<section>
		<img src="{{wgExtensionAssetsPath}}/RecordWizard/icons/no-mic.svg" width="40" height="40">
		{{&_ "mwe-recwiz-tutorial-activate"}}
		<ooui-button id="mwe-rwt-reopenpopup" label="{{_ "mwe-recwiz-tutorial-reopenpopup"}}" @click="getAudioStream()"></ooui-button>
	</section>
</div>
<div class="mwe-rw-section-group" v-show="state.isBrowserReady">
	<section>
		{{&__ "mwe-recwiz-tutorial-help"}}
		<div id="mwe-rwt-info">
			{{&__ "mwe-recwiz-tutorial-info"}}
		</div>
	</section>
	<section>
		{{&__ "mwe-recwiz-tutorial-mictester-info"}}
		<ooui-button id="mwe-rwt-testbutton" v-show="mictesterState === 'init'" label="{{_ "mwe-recwiz-tutorial-mictester-start"}}" @click="mictesterRecord()"></ooui-button>
		<div id="mwe-rwt-testrecord" v-show="mictesterState === 'record'">{{_ "mwe-recwiz-tutorial-mictester-recording"}}</div>
		<div id="mwe-rwt-testplay" v-show="mictesterState === 'play'">{{_ "mwe-recwiz-tutorial-mictester-playing"}}</div>
		<div id="mwe-rwt-testwait" v-show="mictesterState === 'wait'">{{_ "mwe-recwiz-tutorial-mictester-waiting"}}</div>
	</section>
</div>
