<div class="mwe-rw-content-title">
	<h3>{{_ "mwe-recwiz-speaker-title"}}</h3>
</div>
<div class="mwe-rw-section-group">
	<section class="mwe-rw-warning">
		{{&__ "mwe-recwiz-speaker-warning"}}
	</section>
	<section>
		<div id="mwe-rwl-profile-field" class="mwe-rw-field" >
			<label for="mwe-rwl-profile-input">{{_ "mwe-recwiz-speaker-profile"}}</label>
			<ooui-dropdown id="mwe-rwl-profile" input-id="mwe-rwl-profile-input" :options="profiles" v-model="metadata.speaker.qid"></ooui-dropdown>
		</div>
		<div id="mwe-rwl-name-field" class="mwe-rw-field">
			<label for="mwe-rwl-name-input">{{_ "mwe-recwiz-speaker-name"}}</label>
			<ooui-textinput id="mwe-rwl-name" input-id="mwe-rwl-name-input" v-model="metadata.speaker.name" :disabled="metadata.speaker.name === config.speaker.name"></ooui-textinput>
		</div>
		<div id="mwe-rwl-gender-field" class="mwe-rw-field">
			<label for="mwe-rwl-gender-input">{{_ "mwe-recwiz-speaker-gender"}}</label>
			<ooui-buttonselect id="mwe-rwl-gender" input-id="mwe-rwl-gender-input" :options="genderOptions" v-model="metadata.speaker.gender"></ooui-buttonselect>
		</div>
		<div id="mwe-rwl-languages-field" class="mwe-rw-field">
			<label for="mwe-rwl-languages-input">{{_ "mwe-recwiz-speaker-languages"}}</label>
			<ll-langselector id="mwe-rwl-languages" input-id="mwe-rwl-languages-input" :options="availableLanguages" v-model="metadata.speaker.languages"></ll-langselector>
		</div>
		<div id="mwe-rwl-location-field" class="mwe-rw-field">
			<label for="mwe-rwl-location-input">{{_ "mwe-recwiz-speaker-location"}}</label>
			<ll-wdsearch id="mwe-rwl-location" input-id="mwe-rwl-location-input" v-model="metadata.speaker.location"></ll-wdsearch>
		</div>
		<div id="mwe-rwl-license-field" class="mwe-rw-field">
			<label for="mwe-rwl-license-input">{{_ "mwe-recwiz-speaker-license"}}</label>
			<div>
				<span v-html="licenseText"></span>
				<ooui-dropdown id="mwe-rwl-license" input-id="mwe-rwl-license-input" :options="availableLicenses" v-model="metadata.license"></ooui-dropdown>
				{{_ "mwe-recwiz-speaker-agreement"}}
			</div>
		</div>
	</section>
</div>
